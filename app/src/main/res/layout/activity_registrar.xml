<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrarActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:id="@+id/text1"
        android:text="Insira Username:" />


    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/text1"
        android:inputType="textPersonName"
        android:id="@+id/et_reg_username" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:id="@+id/text2"
        android:layout_below="@id/et_reg_username"
        android:text="Insira Senha:"/>


    <EditText
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_reg_username"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/text2"
        android:inputType="textPassword"
        android:id="@+id/et_reg_password1" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:id="@+id/text3"
        android:layout_below="@id/et_reg_password1"
        android:text="Repita a Senha:"/>


    <EditText
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text3"
        android:layout_marginTop="30dp"
        android:layout_below="@id/et_reg_password1"
        android:inputType="textPassword"
        android:id="@+id/et_reg_password2" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_reg_password2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Registrar"
        android:id="@+id/bt_registrarnovo" />

</RelativeLayout>